{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"lib": [ "ES2020", "DOM" ],
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"strict": true,
		"declaration": false,
		"outDir": "./dist",
		"rootDir": "./",
		"resolveJsonModule": true,
		"allowJs": true,
		"noEmit": true
	},
	"include": [
		"**/*.ts",
		"types.d.ts"
	],
	"exclude": [
		"node_modules",
		"dist",
		"config.js"
	]
}
