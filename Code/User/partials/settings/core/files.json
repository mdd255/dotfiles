{
	"$schema": "vscode://schemas/settings/default",
	"files.enableTrash": false,
	"files.hotExit": "onExitAndWindowClose",
	"files.simpleDialog.enable": true,
	"files.exclude": {
		"**/dist": true,
		"**/.next": true,
		"**/assets": true,
		"**/node_modules": true,
		"**/logs": true,
		"yarn.lock": true,
		"package-lock.json": true,
		"pnpm-lock.yaml": true
	},
	"files.watcherExclude": {
		"**/.git/objects/**": true,
		"**/.git/subtree-cache/**": true,
		"**/node_modules/**": true,
		"**/tmp/**": true,
		"**/dist/**": true,
		"**/.next/**": true,
		"**/target/**": true,
		"**/.gradle/**": true,
		"**/build/**": true
	}
}
