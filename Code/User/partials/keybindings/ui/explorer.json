[
	{
		"key": "a",
		"command": "explorer.newFile",
		"when": "filesExplorerFocus && !inputFocus"
	},
	{
		"key": "d",
		"command": "runCommands",
		"args": {
			"commands": [
				"deleteFile",
				{
					"command": "vscode-neovim.send",
					"args": ":lua vim.notify('Deleted')<CR>"
				}
			]
		},
		"when": "filesExplorerFocus && !inputFocus"
	},
	{
		"key": "r",
		"command": "renameFile",
		"when": "filesExplorerFocus && !inputFocus"
	},
	{
		"key": "x",
		"command": "runCommands",
		"args": {
			"commands": [
				"filesExplorer.cut",
				{
					"command": "vscode-neovim.send",
					"args": ":lua vim.notify('Cut')<CR>"
				}
			]
		},
		"when": "filesExplorerFocus && !inputFocus"
	},
	{
		"key": "y",
		"command": "runCommands",
		"args": {
			"commands": [
				"filesExplorer.copy",
				{
					"command": "vscode-neovim.send",
					"args": ":lua vim.notify('Copied')<CR>"
				}
			]
		},
		"when": "filesExplorerFocus && !inputFocus"
	},
	{
		"key": "p",
		"command": "runCommands",
		"args": {
			"commands": [
				"filesExplorer.paste",
				{
					"command": "vscode-neovim.send",
					"args": ":lua vim.notify('Pasted')<CR>"
				}
			]
		},
		"when": "filesExplorerFocus && !inputFocus"
	}
]
