[
	{
		"key": "escape",
		"command": "workbench.action.closeSidebar",
		"when": "sideBarFocus && !inputFocus"
	},
	{
		"key": "ctrl+n",
		"command": "workbench.action.focusSideBar",
		"when": "!sideBarVisible && neovim.mode != insert"
	},
	{
		"key": "ctrl+n",
		"command": "workbench.action.closeSidebar",
		"when": "sideBarVisible && neovim.mode != insert"
	},
	{
		"key": "-",
		"command": "workbench.action.closeSidebar",
		"when": "sideBarFocus && !inputFocus"
	},
	{
		"key": "ctrl+o",
		"command": "workbench.action.closeSidebar",
		"when": "sideBarVisible && !inputFocus && neovim.mode != insert"
	}
]
