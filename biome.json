{
  "$schema": "https://biomejs.dev/schemas/2.2.6/schema.json",
  "linter": {
    "enabled": true,
    "rules": {
      "style": {
        "useImportType": "off",
        "noParameterAssign": "off"
      },
      "performance": {
        "noAccumulatingSpread": "off"
      },
      "suspicious": {
        "noConsole": "error",
        "noExplicitAny": "off"
      },
      "complexity": {
        "useArrowFunction": "off",
        "noForEach": "off",
        "useLiteralKeys": "off"
      },
      "nursery": {}
    }
  },
  "formatter": {
    "enabled": true
  },
  "javascript": {
    "formatter": {
      "enabled": true,
      "semicolons": "always",
      "indentStyle": "space",
      "quoteStyle": "single",
      "trailingCommas": "all",
      "lineEnding": "lf",
      "arrowParentheses": "asNeeded",
      "lineWidth": 100,
      "indentWidth": 2
    },
    "parser": {
      "unsafeParameterDecoratorsEnabled": true
    }
  }
}