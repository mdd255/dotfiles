{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"organizeImports": { "enabled": true },
	"linter": {
		"enabled": true,
		"rules": {
			"style": {
				"useImportType": "off",
				"noParameterAssign": "off"
			},
			"performance": {
				"noAccumulatingSpread": "off"
			},
			"suspicious": {
				"noConsole": "error",
				"noExplicitAny": "off"
			},
			"complexity": {
				"noForEach": "off",
				"useLiteralKeys": "off"
			}
		}
	},
	"javascript": {
		"formatter": {
			"semicolons": "asNeeded",
			"indentStyle": "space",
			"quoteStyle": "single",
			"trailingCommas": "all",
			"indentWidth": 2
		},
		"parser": {
			"unsafeParameterDecoratorsEnabled": true
		}
	}
}
