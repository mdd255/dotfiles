{
	"layer": "top",
	"position": "top",
	"output": ["HDMI-A-1"],
	"modules-center": ["clock#us", "custom/earth", "clock#ptg"],
	"modules-right": ["clock"],
	"include": ["~/.config/dotfiles/omarchy/waybar/base-bar.jsonc"],
	"clock#us": {
		"format": "{:L%H:%M %d/%m %a [America/New_York]}  ",
		"timezone": "America/New_York"
	},
	"clock#ptg": {
		"format": " {:L%H:%M %d/%m %a [Portugal]}",
		"timezone": "Portugal"
	}
}
